<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
        type="url"
        name="avatar_url"
        placeholder="http://"
        value="{{teacher.avatar_url}}"
        >
    </div>
</div>
<div class="item">
    <div>Nome Completo</div>
    <div>
        <input
        type="text"
        name="name"
        placeholder="Nome do Professor"
        value="{{teacher.name}}"
        >
    </div>
</div>
<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input
        type="date"
        name="birth"
        value="{{teacher.birth}}"
        >
    </div>
</div>
<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
            <option
            value="medium"
            {% if teacher.education_level == 'medium' %}
            selected
            {% endif %}
            >
            Ensino Médio Completo
            </option>
            <option
            value="high"
            {% if teacher.education_level == 'high' %}
            selected
            {% endif %}
            >
            Ensino Superior Completo
            </option>
            <option
            value="master"
            {% if teacher.education_level == 'master' %}
            selected
            {% endif %}
            >
            Mestrado
            </option>
            <option
            value="doctor"
            {% if teacher.education_level == 'doctor' %}
            selected
            {% endif %}
            >
            Doutorado
            </option>
        </select>
    </div>
</div>
<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input
            type="radio"
            name="class_type"
            value="presential"
            {% if teacher.class_type == 'presential' %}
            checked
            {% endif %}
            >
            Presencial
        </span>
        <span>
            <input
            type="radio"
            name="class_type"
            value="remotely"
            {% if teacher.class_type == 'remotely' %}
            checked
            {% endif %}
            >
            À distância
        </span>
    </div>
    
</div>
<div class="item">
    <div>Área de atuação</div>
    <div>
        <input
        type="text"
        name="services"
        placeholder="Separe as matérias por vírgula"
        value="{{teacher.services}}"
        >
    </div>
</div>
<button type="submit">Salvar</button>