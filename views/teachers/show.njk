{% extends 'layout.njk' %}

{% block content %}

<div class="card">
    <section class="avatar"
    style="background: url(https://source.unsplash.com/collection/10553730/500x500) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome Completo</div>
            <div>{{teacher.name}}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{teacher.age}}</div>
        </div>
        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{teacher.education_level}}</div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>
                {{'Presencial' if teacher.class_type == 'presential' else 'À distância'}}
            </div>
            
        </div>
        <div class="item">
            <div>Área de atuação</div>
            <div>
                {% for service in teacher.services %}
                <span>{{service}}</span>
                {% endfor %}
            </div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{teacher.create_at}}</div>
        </div>
        <a href="#" class="button">Editar</a>
    </section>
</div>

{% endblock content %}